<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TrailsHelper.ViewModels"
             xmlns:local="using:TrailsHelper.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="{x:Type vm:MainWindowViewModel}"
             x:Class="TrailsHelper.Views.HomeView">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>
  
  <StackPanel VerticalAlignment="Center">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
      <WrapPanel HorizontalAlignment="Center">
        <local:GameDisplay DataContext="{Binding ContextFC, x:DataType={x:Type vm:GameDisplayViewModel}}"></local:GameDisplay>
        <local:GameDisplay DataContext="{Binding ContextSC, x:DataType={x:Type vm:GameDisplayViewModel}}"></local:GameDisplay>
        <local:GameDisplay DataContext="{Binding Context3rd, x:DataType={x:Type vm:GameDisplayViewModel}}"></local:GameDisplay>
      </WrapPanel>
    </StackPanel>
  </StackPanel>
</UserControl>
