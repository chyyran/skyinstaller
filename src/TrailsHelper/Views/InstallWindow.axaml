<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TrailsHelper.ViewModels"
        xmlns:local="using:TrailsHelper.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
         x:Class="TrailsHelper.Views.InstallWindow"

        Height="450" Width="800"
        MinHeight="450"
        MinWidth="750"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        Icon="/Assets/avalonia-logo.ico"
        ExtendClientAreaToDecorationsHint="True"
        Title="Skyinstaller">
  
  <Grid ShowGridLines="True">
    <ExperimentalAcrylicBorder IsHitTestVisible="False">
      <ExperimentalAcrylicBorder.Material>
        <ExperimentalAcrylicMaterial
            BackgroundSource="Digger"
            FallbackColor="Black"
            TintColor="Black"
            TintOpacity="1"
            MaterialOpacity="0.65" />
      </ExperimentalAcrylicBorder.Material>
    </ExperimentalAcrylicBorder>
    <Grid>
      <ExperimentalAcrylicBorder IsHitTestVisible="False">
        <ExperimentalAcrylicBorder.Material>
          <ExperimentalAcrylicMaterial
              BackgroundSource="Digger"
              FallbackColor="Black"
              TintColor="White"
              TintOpacity="0"
              MaterialOpacity="0.65" />
        </ExperimentalAcrylicBorder.Material>
      </ExperimentalAcrylicBorder>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="300"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
   
      <StackPanel Grid.Column="0" Spacing="5" VerticalAlignment="Center">
        <Panel IsVisible="{Binding GameModel.IsLoaded}" Width="200" Height="300" VerticalAlignment="Center" HorizontalAlignment="Center">
          <Border CornerRadius="3" ClipToBounds="True" BoxShadow="inset -1 0 1 -1 #10000000, inset -2 0 2 -2 #20000000, inset -6 0 6 -6 #16000000, inset -16 0 16 -16 #16000000">
            <Image Width="200" Height="300" Stretch="Uniform" Source="{Binding GameModel.CoverArt}"/>
          </Border>
        </Panel>
        <Label Content="{Binding GameModel.Title}" HorizontalAlignment="Center"/>
        <Button HorizontalAlignment="Center" Background="DarkGray" IsEnabled="False">Install</Button>
      </StackPanel>
      
      <Grid Margin="20 30 0 10" Grid.Column="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="2">
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel>
          <Label Content="{Binding GameModel.Path}"/>
          <StackPanel Orientation="Horizontal">
            <Label>Voice Files</Label>
            <Button>Browse...</Button>
          </StackPanel>
          <StackPanel Orientation="Horizontal">
            <Label>Battle Voices DIR</Label>
            <Button>Browse...</Button>
          </StackPanel>
          <StackPanel Orientation="Horizontal">
            <Label>Battle Voices DAT</Label>
            <Button>Browse...</Button>
          </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          <Label Grid.Column="0">Requires Voice Files..</Label>
          <ProgressBar Margin="10 0 20 0" Grid.Column="1" HorizontalAlignment="Stretch"></ProgressBar>

        </Grid>

      </Grid>
    </Grid>
  </Grid>
</Window>
